<div class="main clear">
  <div class="box">
    <div class="ad">
      <div class="scroll">
        <ul class="slider">
          <% @pics.each do |pic| %>
          <li><img src="<%= "http://116.228.3.80/img/display/#{pic.cpicurl}" %>" onclick='window.open("<%= escape_javascript pic.clink %>")'/></li>
          <% end %>
        </ul>
        <ul class="num">
          <% @pics.each_with_index do |pic, i| %>
          <li class="<%= "on" if i.zero? %>"><%= i+1 %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="notice">
      <ul class="notice_head">
        <li class="notice_t1">通知公告</li>
        <li class="notice_t2">赛事新闻</li>
        <li class="notice_t3">青训公告</li>
        <li class="notice_t4">青训新闻</li>
      </ul>
      <div class="notice_body">
        <ul class="notice_b1">
          <% @tongzhi.each do |tongzhi| %>
          <li><a href="/tzgg/<%~ tongzhi.nid_news %>"><%~ tongzhi.ctitle %></a></li>
          <% end %>
        </ul>
        <ul class="notice_b2" style="display: none">
          <% @news.each do |news| %>
          <li><a href="/ssxw/<%~ news.nid_news %>"><%~ news.ctitle %></a></li>
          <% end %>
        </ul>
        <ul class="notice_b3" style="display: none">
          <% @qing_gonggao.each do |hsh| %>
          <li><a href="<%~ hsh[:href] %>" target="_blank"><%~ hsh[:content] %></a></li>
          <% end %>
        </ul>
        <ul class="notice_b4" style="display: none">
          <% @qing_news.each do |hsh| %>
          <li><a href="<%~ hsh[:href] %>" target="_blank"><%~ hsh[:content] %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="box rankingList">
    <div class="b_title"><h1>奖牌榜</h1><a href="/phb">更多...</a></div>
    <div class="adolescent">
      <h2>青少年组</h2>
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tableList">
        <thead>
          <tr>
            <th>名次</th>
            <th>单位</th>
            <th>团体奖牌</th>
            <th>团体积分</th>
            <th>重点项目奖牌</th>
            <th>重点项目积分</th>
          </tr>
        </thead>
        <% @jiangpais.each_with_index do |jiangpai, index| %>
        <tr>
          <td><%= index+1 %>.</td>
          <td><%~ jiangpai[:dwjc].to_s.strip %></td>
          <td><%~ (jiangpai[:zjp] + jiangpai[:zyp] + jiangpai[:ztp]).to_i %></td>
          <td><%~ jiangpai[:zdf] - jiangpai[:koufen] %></td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="colleges">
      <h2>高校组</h2>
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="tableList">
        <thead>
          <tr>
            <th>团体奖牌</th>
            <th>团体积分</th>
          </tr>
        </thead>
        <% @jiangpais2.each do |jiangpai| %>
        <tr>
          <td><%~ (jiangpai[:zjp] + jiangpai[:zyp] + jiangpai[:ztp]).to_i %></td>
          <td><%~ jiangpai[:zdf] %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  
  <% if @week_schedule.size > 0 %>
  <div class="box schedule">
    <div class="b_title"><h1>竞赛日程</h1><a href="#">更多...</a></div>
    <table width="100%" border="0" cellspacing="5" cellpadding="0">
      <thead>
        <tr>
          <th>全部赛程</th>
          <% week_dictionary = {1=>"一",2=>"二",3=>"三",4=>"四",5=>"五",6=>"六",7=>"日"} %>
          <% @week.each_with_index do |data,i| %>
          <% j = i + 1 %>
          <th><em class="<%~ "orange_font" if j >= 6 %>">星期<%= week_dictionary[j] %></em><span><%~ data[:day] %>日</span></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @week_schedule.each do |schedule| %>
        <tr>
          <td><%~ schedule[:name] %></td>
          <% @week.each_with_index do |data| %>
          <% hsh = schedule[:data][data[:day]] %>
            <% if hsh %>
            <td><%~ hsh[:jpshu] %></td>
            <% else %>
            <td>&nbsp;</td>
            <% end %>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>

