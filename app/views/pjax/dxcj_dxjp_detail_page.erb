<div class="main clear">
	<div class="box">
    	<div class="m_title">
        	<h2>当前位置：赛事/单项成绩/<span style="cursor:pointer;" onclick="window.location.href='/dxcj/dxjp';">单项奖牌</span>/<span style="cursor:pointer;" onclick="window.location.href='/dxcj/dxjp/<%~ @project[:dhkey] %>';"><%~ @project[:xmmc].to_s.strip %></span>/<span style="cursor:pointer;" onclick="window.location.href='/dxcj/dxjp/<%~ @project[:dhkey] %>?zubie=<%~ URI.escape(@zubie) %>';"><%~ @zubie %></h2>
        </div>
        <div class="m_body">
        	  <div class="competition">
            	
                <div class="group_btn">
                  <a href="javascript:;" class="hover"><span>青少年组</span></a>
                  <a href="javascript:alert('暂时还没有高校组的数据');"><span>高校组</span></a>
                </div>

                <div class="competition_a">
                  <a href="/dxcj" class="c_btn_a"><i></i>单项成绩</a>
                  <a href="/dxcj/dxzf" class="c_btn_a"><i></i>单项总分</a>
                  <a href="/dxcj/dxjp" class="c_btn_a hover"><i></i>单项奖牌</a>
                </div>

                <div class="competition_con">
                  <table width="100%" border="0" cellspacing="5" cellpadding="0" style="width: 700px; margin: 0 auto;">
                      <thead>
                      <tr>
                        <th>县区</th>
                        <th class="medal_box">金<i class="one">金牌</i></th>
                        <th class="medal_box">银<i class="two">银牌</i></th>
                        <th class="medal_box">铜<i class="three">铜牌</i></th>
                      </tr>
                      </thead>
                      <tbody>
                        <% @score.each do |score| %>
                        <tr>
                          <td><%~ score[:dwjc].to_s.strip %></td>
                          <td><%~ (tmp=score[:hjjp].to_i)>0 ? tmp : '' %></td>
                          <td><%~ (tmp=score[:hjyp].to_i)>0 ? tmp : '' %></td>
                          <td><%~ (tmp=score[:hjtp].to_i)>0 ? tmp : '' %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>